<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.VTOP.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:drawableTint">?attr/colorSecondary</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textColorHint">@color/secondary_75</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.VTOP.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:drawableTint">?attr/colorPrimary</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.VTOP.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="tabBackground">@drawable/background_primary_tab_item</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@drawable/background_primary_tab_item</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">?attr/colorSecondaryContainer</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">?attr/colorSecondary</item>
        <item name="tabUnboundedRipple">true</item>
    </style>

    <style name="Widget.VTOP.TimetableItemProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/background_timetable_item</item>
    </style>

    <style name="Widget.VTOP.CircularProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/background_circular_progress_bar</item>
    </style>

    <style name="Widget.VTOP.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/TextAppearance.VTOP.Chip</item>
        <item name="chipIconTint">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.VTOP.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/rubik</item>
    </style>
</resources>
